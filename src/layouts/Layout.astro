---
import {
  MdOutlineHome,
  MdOutlinePerson,
  MdOutlineMusicNote,
  MdOutlineSettings,
  MdOutlineTerminal,
} from "react-icons/md";
import HomeBody from "../components/HomeBody.tsx";

interface Props {
  title: string;
}

const { title } = Astro.props;

console.log(Astro.url.href);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900">
    <HomeBody client:only />
    <div class="pb-10">
      <header
        class="sticky top-0 z-10 bg-slate-900 backdrop-filter backdrop-blur-lg bg-opacity-30 border-b border-sky-950 flex items-center justify-between px-3 py-3"
      >
        <div class="flex items-center">
          <nav>
            <ul class="flex text-white font-light">
              <li class="mr-5 px-1 py-1">
                <a href="/">
                  <MdOutlineHome className="hidden sm:inline text-xl text-blue-500 relative bottom-0.5" />
                  <div class="inline-block transition duration-200 ease-in-out hover:text-blue-300">Home</div>
                </a>
              </li>
              <li class="mr-5 px-1 py-1">
                <a href="/about">
                  <MdOutlinePerson className="hidden sm:inline text-xl text-purple-500 relative bottom-0.5" />
                  <div class="inline-block transition duration-200 ease-in-out hover:text-purple-300">About</div>
                </a>
              </li>
              <!-- <li class="mr-5 px-1 py-1">
                <a href="/music">
                  <MdOutlineMusicNote className="hidden sm:inline text-xl text-pink-500 relative bottom-0.5" />
                  <div class="inline-block transition duration-200 ease-in-out hover:text-pink-300">Music</div>
                </a>
              </li>
              <li class="mr-5 px-1 py-1">
                <a href="/settings">
                  <MdOutlineSettings className="hidden sm:inline text-xl text-orange-500 relative bottom-0.5" />
                  <div class="inline-block transition duration-200 ease-in-out hover:text-orange-300">Settings</div>
                </a>
              </li> -->
              <li class="mr-5 px-1 py-1">
                <a href="/terminal">
                  <MdOutlineTerminal className="hidden sm:inline text-xl text-gray-500 relative bottom-0.5" />
                  <div class="inline-block transition duration-200 ease-in-out hover:text-gray-300">Terminal</div>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </header>
      <slot />
    </div>
  </body>
</html>
