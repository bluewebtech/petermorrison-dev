---
import {
  MdOutlineHome,
  MdOutlinePerson,
  // MdOutlineMusicNote,
  // MdOutlineSettings,
  MdOutlineTerminal,
} from "react-icons/md";
import FancyBackground from "../components/FancyBackground.tsx";
import Navigation from "../components/Navigation.tsx";
import XYPosition from "../components/XYPosition.tsx";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900">
    <FancyBackground client:only />
    <div class="pb-10">
      <header
        class="sticky top-0 z-10 bg-slate-900 backdrop-filter backdrop-blur-lg bg-opacity-30 border-b border-sky-950 flex items-center justify-between px-3 py-3"
      >
        <div class="flex items-center h-8">
          <Navigation client:only />
        </div>
      </header>
      <slot />
    </div>
    <XYPosition client:only />
  </body>
</html>
