];
---

<Layout title="Music : It's the world.">
  <div class="relative font-poppins px-6 pt-14 lg:px-8">
    <div class="mx-auto max-w-6xl">
      <div class="text-left">
        <h1 class="text-4xl text-pink-500 font-bold sm:text-6xl">Music</h1>
      </div>
      {
        youtubeLinks.map((link: string) => {
          return (
            <div class="flex mt-6">
              <div class="p-2 aspect-w-14 aspect-h-9">
                <iframe
                  width="560"
                  height="315"
                  src={link}
                  title="YouTube video player"
                  referrerpolicy="strict-origin-when-cross-origin"
                  allowfullscreen
                />
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</Layout>
