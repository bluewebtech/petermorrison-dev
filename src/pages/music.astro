];

const youtubeLinks: string[] = [
  "https://www.youtube.com/embed/D1NdGBldg3w?si=O0kCLLoxAu2PnIIW",
  "https://www.youtube.com/embed/75Mw8r5gW8E?si=VtcAe1nUx4YGD5R2",
  "https://www.youtube.com/embed/CFlhlZbeKgE?si=l_H8qO8PDKisfvuC",
  "https://www.youtube.com/embed/7_TqLc-vETs?si=3z4DZatuEC-tVDbJ",
  "https://www.youtube.com/embed/3zAJ3LxMvqs?si=LtMKB4uttP82OepW",
  "https://www.youtube.com/embed/kdkMXbcC97I?si=HVLU5SxPxFStaXS-",
  "https://www.youtube.com/embed/iyVn13AXqXk?si=Sl4R6TkXZUlA3xHS",
  "https://www.youtube.com/embed/xzjXcRFHjLA?si=b9ND3QuQqlAZpGgm",
