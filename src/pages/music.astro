];
---

<Layout title="Music : It's the world.">
  <div class="relative font-poppins px-6 pt-14 lg:px-8">
    <div class="mx-auto max-w-6xl">
      <div class="text-left">
        <h1 class="text-4xl text-pink-500 font-bold sm:text-6xl">Music</h1>
      </div>
      <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {
          spotifyPlaylistLinks.map((link: string) => {
            return (
              <div>
                <iframe
                  width="100%"
                  src={link}
                  allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                  loading="lazy"
                />
              </div>
            );
          })
        }
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {
          youtubeLinks.map((link: string) => {
            return (
              <div>
                <iframe
                  width="100%"
                  src={link}
                  title="YouTube video player"
                  referrerpolicy="strict-origin-when-cross-origin"
                  allowfullscreen
                />
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</Layout>
